{
  "manifest_version": 2,

  "name": "Goto GoDoc",
  "description": "Open the currently selected page in godoc.org",
  "version": "0.2",

  "permissions": [ "tabs" ],

  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "browser_action": {
    "default_icon": "icon128.png",
    "default_title": "Goto GoDoc"
  },

  "background": {
     "scripts": [ "background.js" ]
  }
}
